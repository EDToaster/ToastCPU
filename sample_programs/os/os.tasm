.reset
    # setup isr and jump to main
    imov    isr .isr
    call!   .main
    halt

#include<print>
#include<print>

.isr
    isr!
    rti!

.main # ( )
    # init variables
    imov    t0 0
    str!    .ptr_counter t0

    imov!   t0 100
    str!    .ptr_line_counter t0

    # start printing
    imov!   p0 .welcome_message        # load message
    call!   .print_string

    jmpr
# end main


